<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SHELT" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:windowBackground">@color/background_light</item>

        <item name="colorError">@color/notification_error</item>

        <item name="materialButtonStyle">@style/Widget.SHELT.Button</item>
        <item name="buttonStyle">@style/Widget.SHELT.Button</item>
        <item name="editTextStyle">@style/Widget.SHELT.EditText</item>
        <item name="cardViewStyle">@style/Widget.SHELT.CardView</item>
    </style>

    <style name="Theme.SHELT.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>