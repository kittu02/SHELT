<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SHELT" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Default font family -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
        
        <!-- Color scheme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        
        <!-- Component styles -->
        <item name="materialCardViewStyle">@style/SheltCard</item>
        <item name="materialButtonStyle">@style/SheltButton</item>
        <item name="textInputStyle">@style/SheltTextInput</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadlineLarge">@style/SheltTextAppearance.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/SheltTextAppearance.HeadlineMedium</item>
        <item name="textAppearanceTitleLarge">@style/SheltTextAppearance.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/SheltTextAppearance.TitleMedium</item>
        <item name="textAppearanceBodyLarge">@style/SheltTextAppearance.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/SheltTextAppearance.BodyMedium</item>
    </style>

    <style name="Theme.SHELT" parent="Base.Theme.SHELT" />

    <!-- Card styles -->
    <style name="SheltCard" parent="Widget.Material3.CardView.Elevated">
        <item name="android:padding">16dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>

    <!-- Button styles -->
    <style name="SheltButton" parent="Widget.Material3.Button">
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="SheltButtonOutlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">60dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Text Input styles -->
    <style name="SheltTextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
    </style>

    <!-- Typography styles -->
    <style name="SheltTextAppearance.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="SheltTextAppearance.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="SheltTextAppearance.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="SheltTextAppearance.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="SheltTextAppearance.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="SheltTextAppearance.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>
</resources>